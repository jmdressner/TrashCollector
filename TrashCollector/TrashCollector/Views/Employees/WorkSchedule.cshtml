@model IEnumerable<TrashCollector.Models.PickUpModel>

@{
    ViewBag.Title = "WorkSchedule";
}

<h2>WorkSchedule</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrashDay.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtraDay.extra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zipcode.Zip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrashDay.Day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraDay.extra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zipcode.Zip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditStatus", new { id = item.ID }) |
        </td>
    </tr>
}

</table>
