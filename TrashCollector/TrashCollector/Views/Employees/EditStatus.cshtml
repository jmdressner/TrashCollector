@model TrashCollector.Models.Customer

@{
    ViewBag.Title = "EditStatus";
}

<h2>EditStatus</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Customer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.ZipcodeID)
    @Html.HiddenFor(model => model.TrashDay)
    @Html.HiddenFor(model => model.ExtraID)

    <div class="form-group">
        @Html.LabelFor(model => model.PickUpStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.PickUpStatus)
                @Html.ValidationMessageFor(model => model.PickUpStatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "WorkSchedule")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
