@model TrashCollector.Models.PickUpModel

@{
    ViewBag.Title = "EditStatus";
}

<h2>Edit Pickup Status</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CustomerID)
    @Html.HiddenFor(model => model.Price)

    <div class="form-group">
        @Html.LabelFor(model => model.PickUpStatus, "Pickup Status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.PickUpStatus)
                @Html.ValidationMessageFor(model => model.PickUpStatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExtraPickUpStatus, "Extra Pickup Status",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ExtraPickUpStatus)
                @Html.ValidationMessageFor(model => model.ExtraPickUpStatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

