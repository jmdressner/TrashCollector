@model TrashCollector.Models.Customer
@{
    ViewBag.Title = "EditSchedule";
}

<h2>Edit Trash Pickup Schedule</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.ApplicationUserID)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.ZipcodeID)
    @Html.HiddenFor(model => model.Balance)

    <div class="form-group">
        @Html.LabelFor(model => model.TrashDayID, "Trash Pickup Day", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TrashDayID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TrashDayID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExtraID, "Extra Pickup Day", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ExtraID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ExtraID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
