@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewBag.Title = "Balance";
}

<h2>Balance</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
        </tr>
    }

</table>
